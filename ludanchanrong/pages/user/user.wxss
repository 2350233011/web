.headimg {
    height: 210rpx;
    width: 210rpx;
    display: flex;
    flex-direction: column;
    margin: 10% auto;
    text-align: center;
    position: absolute;
    z-index: 999999999;
    top: 3.5%;
    left: 50%;
    margin-left: -90rpx;
}

.headimg image {
    height: 180rpx;
    width: 180rpx;
    object-fit: cover;
    border-radius: 50%;
    border: 1px solid white;
}

.headimg text {
    color: gray;
    font-size: 24rpx;
}

