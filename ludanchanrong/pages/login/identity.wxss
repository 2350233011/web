.body_top {
    background-color: white;
    height: 180rpx;
    padding: 10rpx 40rpx;
    display: flex;
    flex-direction: column;
}

.title {
    font-size: 54rpx;
}

.remind {
    font-size: 26rpx;
}

.body {
    text-align: center;
    padding: 20rpx;
}

.content {
    background-color: white;
    border-radius: 20rpx;
    height: 200rpx;
    width: 100%;
    padding: 20rpx 40rpx;
    margin-bottom: 20rpx;
    text-align: left;
    display: flex;
    align-items: center;

}

.content_img {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;

}

.context_text {
    padding-left: 40rpx;
    font-size: 40rpx;
    width: 50%;
}

.icon_right {
    text-align: right;
    font-size: 40rpx;
    width: 10%;
}