            |
            <view class="but_jump" bind:tap="{{pw_show?'code_login':'pw_login'}}">
                {{pw_show?"验证码":"密码"}}登录
            </view>
            |
            <view class="but_jump" bindtap="logon">注册</view>
        </view> -->
    </view>
    <view class="radio-section">
        <radio-group bindchange="radioChange">
            <checkbox class="round blue" checked="true" />
            已阅读并同意
            <view class="text-blue" data-target="DialogModal1" bind:tap="showModal">
                《鲁担产融平台用户协议》
