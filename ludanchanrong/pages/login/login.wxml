<block wx:if="{{show}}">
    <view class='changeInfo'>
        <image class="logo" src="../../images/logo.png" />
        <view class="cu-form-group">
            <input placeholder="请输入手机号" bindinput='getPhoneValue' maxlength="11" value='{{phone}}'></input>
        </view>
        <block wx:if="{{invite_show}}">
            <view class="cu-form-group">
                <input placeholder='请输入邀请码' bindinput='getinviteValue' value='{{pass}}'></input>
            </view>
            <button class='changeBtn' style="width:90%" bindtap='the_logon'>激活</button>
        </block>
        <block wx:else>
            <view class="cu-form-group">
                <input placeholder="请输入验证码" bindinput='getCodeValue' maxlength="11" value='{{code}}'></input>
                <view class="vertical"></view>
                <view wx:if="{{but_show}}" class="yanzhengma" bindtap="getcode">获取验证码</view>
                <view wx:else class="yanzhengma">{{but_val}} 秒</view>
            </view>
            <button class='changeBtn {{showView?"":"color"}}' style="width:90%" bindtap='the_login'>
                登录
            </button>
        </block>
