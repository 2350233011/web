.input_data {
    display: flex;
    flex-direction: column;
    height: 95vh;
    overflow: hidden;
}

.input_datas {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding: 0 20rpx 20rpx 20rpx;
}

.goods {
    display: flex;
    flex-direction: column;
    border-radius: 10rpx;
    background-color: white;
    /* max-height: 380rpx; */
    margin: 20rpx auto 0;
}

.goods image {
    height: 270rpx;
    width: 270rpx;
    border-radius: 10rpx;
    object-fit: cover;
}

.goods text {
    width: 270rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    /* Firefox */
    display: -moz-box;
    -moz-line-clamp: 1;
    -moz-box-orient: vertical;
    /* Safari、Opera、Chrome */
    display: -webkit-box;
    /* 盒子垂直对齐 */
    -webkit-box-orient: vertical;
    /* 两行 */
    -webkit-line-clamp: 2;
}

.gotop {
    position: absolute;
    top: 85%;
    left: 85%;
}

.gotop text {
    font-size: 40rpx;
    font-weight: 800;
    padding: 20rpx;
    background-color: white;
    border-radius: 50%;
    border: 1rpx solid gainsboro;
}