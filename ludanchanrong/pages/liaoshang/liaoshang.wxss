.message {
    background-color: #1e90ff;
    color: white;
    padding: 20rpx;
    /* border-top: 1px solid gainsboro; */
}

.message_bottom {
    padding-top: 10rpx;
}

.headimg {
    height: 100rpx;
    width: 100rpx;
}

.headimg image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}

.message_money {
    text-align: center;
}

.message_data {
    text-align: right;
    font-size: 50rpx;
    padding: 10rpx;
}

.to_view {
    margin: 0 auto;
    height: 50rpx;
    width: 140rpx;
    font-size: 24rpx;
    background: #6bb9f8;
    color: white;
    border-radius: 5rpx;
    line-height: 50rpx;
}

.money_title {
    font-size: 40rpx;
    padding: 8rpx;
}

.money_title2 {
    font-size: 24rpx;
    padding: 8rpx 8rpx 0 8rpx;
}

.money_data {
    font-size: 70rpx;
    padding: 0 20rpx 20rpx 20rpx;
}

.money_used {
    text-align: right;
}

.body_theorder, .body_buy, .body_pastbuy {
    background-color: white;
    padding: 20rpx;
}

.body_margin {
    border-radius: 10rpx;
    margin: 20rpx;
}

._title {
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.theorder_data {
    text-align: center;
    margin-top: -20rpx;
}

.theorder_color {
    color: #1e90ff;
    font-size: 100rpx;
}

.theorder_1, .theorder_2 {
    display: flex;
    flex-direction: column;
}

.cornerMarker {
    font-size: 20rpx;
    height: 30rpx;
    width: 50rpx;
    border-radius: 200rpx;
    position: relative;
    left: 60%;
    top: 15rpx;
}

.gengduo {
    text-align: right;
}

.gengduo text {
    color: gray;
    font-size: 24rpx;
}

.stiltle {
    font-size: 24rpx;
}

.goods {
    display: flex;
    flex-direction: column;
    border-radius: 10rpx;
    background-color: white;
    margin-top: 20rpx;
    margin-left: 20rpx;
}

.goods image {
    height: 180rpx;
    width: 180rpx;
    border-radius: 10rpx;
    object-fit: cover;
}

.goods_title {
    color: gray;
    font-size: 24rpx;
    margin: 8rpx 0;
}

.goods_title2 {
    color: #1e90ff;
    font-size: 26rpx;
}

.goods_title2 text {
    margin-right: 5rpx;
}

.margin_pastbuy {
    margin: 40rpx 0 20rpx 20rpx;
}

.pastbuy_data_liaoshang {
    padding: 20rpx 0 20rpx 0;
    border-top: 1px solid gainsboro;
}

.pastbuy_data_liaoshang_title {
    color: black;
}

.pastbuy_data_liaoshang text {
    overflow: hidden;
    text-overflow: ellipsis;
    /* Firefox */
    display: -moz-box;
    -moz-line-clamp: 1;
    -moz-box-orient: vertical;
    /* Safari、Opera、Chrome */
    display: -webkit-box;
    /* 盒子垂直对齐 */
    -webkit-box-orient: vertical;
    /* 两行 */
    -webkit-line-clamp: 2;
}

.data_body {
    background-color: #dcdcdc4d;
    margin-bottom: 10rpx;
    border-radius: 10rpx
}