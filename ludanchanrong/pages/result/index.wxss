.changeInfo{
  padding-top: 20rpx;
  text-align: center;
  font-size: 40rpx;
}
.changeInfoName{
  position: relative;
  height: 80rpx;
  width: 100%;
  border-radius: 10rpx;
  background: #f2f2f2;
  margin-bottom: 20rpx;
